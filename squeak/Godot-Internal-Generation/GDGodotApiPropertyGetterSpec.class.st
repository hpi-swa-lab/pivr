Class {
	#name : #GDGodotApiPropertyGetterSpec,
	#superclass : #GDMethodSpec,
	#instVars : [
		'getterName'
	],
	#category : #'Godot-Internal-Generation'
}

{ #category : #'instance creation' }
GDGodotApiPropertyGetterSpec class >> fromAPIJsonObject: aJsonObject className: className [

	^ (self newNamed: aJsonObject name arguments: #() category: self methodCategory className: className)
		getterName: aJsonObject getter;
		returnType: aJsonObject type
]

{ #category : #'instance creation' }
GDGodotApiPropertyGetterSpec class >> methodCategory [

	^ '*autogenerated - properties'
]

{ #category : #generating }
GDGodotApiPropertyGetterSpec >> getterName [

	^ self class squeakifyMethodName: getterName
]

{ #category : #accessing }
GDGodotApiPropertyGetterSpec >> getterName: aString [

	getterName := aString
]

{ #category : #generating }
GDGodotApiPropertyGetterSpec >> methodName [

	^ self class squeakifyMethodName: name
]

{ #category : #generating }
GDGodotApiPropertyGetterSpec >> source [

	^ '{1}
	<generated>
		
	^ self get: {2} return: {3}' format: {
		self methodName.
		name asSymbol storeString.
		(GDApiObjectsGenerator squeakClassName: self returnType) asSymbol storeString}
]
