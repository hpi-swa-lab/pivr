Class {
	#name : #GDGodotApiSignalSpec,
	#superclass : #GDMethodSpec,
	#category : #'Godot-Internal-Generation'
}

{ #category : #'instance creation' }
GDGodotApiSignalSpec class >> fromAPIJsonObject: aJsonObject  className: className [

	^ self newNamed: aJsonObject name
		arguments: {}
		category: self methodCategory
		className: className
		
]

{ #category : #'instance creation' }
GDGodotApiSignalSpec class >> methodCategory [

	^ '*autogenerated - signals'
]

{ #category : #'as yet unclassified' }
GDGodotApiSignalSpec class >> squeakifyMethodName: aString [

	^ 'on', (super squeakifyMethodName: aString) capitalized
]

{ #category : #generating }
GDGodotApiSignalSpec >> methodName [

	^ self class squeakifyMethodName: name
]

{ #category : #generating }
GDGodotApiSignalSpec >> source [

	^ '{1}: aBlock
	<generated>
		
	properties at: {2} put: aBlock' format: {
		self methodName.
		name asSymbol storeString}
]
